
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <form>
        <div class="card mt-4">
            <div class="card-header">
                <h4 class="card-title">Meeting Miniutes</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <input class="form-check-input" type="radio" name="PersonType" id="Corporate" value="Corporate" checked>
                        <label class="form-check-label" for="Corporate">
                            Corporate
                        </label>
                    </div>
                    <div class="col-md-3">
                        <input class="form-check-input" type="radio" name="PersonType" id="Individual" value="Individual">
                        <label class="form-check-label" for="Individual">
                            Individual
                        </label>
                    </div>

                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label for="exampleFormControlInput1" class="col-form-label col-sm-4">Customer Name</label>
                            <div class="col-sm-8">
                                <select class="form-select form-select-sm">
                                    <option selected>Select customer name</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-4">Date</label>
                            <div class="col-sm-3">
                                <input type="date" class="form-control" id="exampleFormControlTextarea1" rows="3"></input>
                            </div>
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-2">Time</label>
                            <div class="col-sm-3">
                                <input type="time" class="form-control" id="exampleFormControlTextarea1" rows="3"></input>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-4">Meating Place</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="exampleFormControlTextarea1" rows="3"></input>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-4">Attends From Client Side</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-4">Attends From Host Side</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3 row">
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-4">Meeting Agenda</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-4">Meeting Discussion*</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-4">Meeting Decision*</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label for="exampleFormControlInput1" class="col-form-label col-sm-4">Interestd Product/Service</label>
                            <div class="col-sm-8">
                                <select class="form-select form-select-sm">
                                    <option selected>Select product/service interested</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-4">Quantity</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="exampleFormControlTextarea1" rows="3" />
                            </div>

                            <label for="exampleFormControlTextarea1" class="col-form-label col-sm-2">Unit</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="exampleFormControlTextarea1" readonly rows="3" />
                            </div>
                        </div>
                    </div>
                </div>
                <button type="" class="btn btn-sm"><i class="fa fa-plus"></i> Add</button>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">SL#</th>
                            <th scope="col">Interested Product/Service Name</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Unit</th>
                            <th scope="col">Edit | Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>1</th>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-sm col-1"><i class="fa fa-save"></i> Save</button>
            <button type="reset" class="btn btn-sm col-1"><i class="fa fa-refresh"></i> Refresh</button>
        </div>
    </form>
</div>
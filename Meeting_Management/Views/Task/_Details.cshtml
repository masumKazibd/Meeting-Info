                        @Html.TextBoxFor(x => x.Unit, new { @class = "form-control", type = "text", @readonly = "readonly", id = "Unit", placeholder = @ViewBag.Unit })
                        @Html.HiddenFor(x => x.Unit)

                        @*@Html.TextBoxFor(x => x.Unit, new { @class = "form-control readonly", type = "text", value = "@ViewBag.Unit" })*@
